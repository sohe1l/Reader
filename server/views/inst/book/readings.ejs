                            "categoryField": "page",
                            "autoMarginOffset": 5,
                            "marginRight": 15,
                            "marginTop": 20,
                            "startDuration": 0.03, // animation
                            "fontSize": 13,
                            "theme": "default",
                            "categoryAxis": {
                                "startOnAxis": true
